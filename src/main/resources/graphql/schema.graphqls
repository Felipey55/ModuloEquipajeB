type Equipaje {
    id: ID!
    alto: Float
    largo: Float
    ancho: Float
    peso: Float
    tipo: String!
    ubicacion: String!
    valor: Float!
    vuelo: Vuelo
    pasajero: Pasajero
}

type Vuelo {
    id: ID!
    numeroVuelo: String!
    origen: String!
    destino: String!
    fechaSalida: String!
}

type Pasajero {
    id: ID!
    nombre: String!
    apellido: String!
    numeroPasaporte: String!
    nacionalidad: String!
}

type Query {
    # Listar todos los equipajes
    todosLosEquipajes: [Equipaje]

    # Buscar equipaje por ID
    equipajePorId(id: ID!): Equipaje
}

type Mutation {
    # Agregar nuevo equipaje
    agregarEquipaje(
        alto: Float,
        largo: Float,
        ancho: Float,
        peso: Float,
        tipo: String!,
        ubicacion: String!,
        valor: Float!,
        vueloId: ID!,
        pasajeroId: ID!
    ): Equipaje

    # Eliminar equipaje por ID
    eliminarEquipaje(id: ID!): Equipaje

    # Editar equipaje por ID
    actualizarEquipaje(
        id: ID!,
        alto: Float,
        largo: Float,
        ancho: Float,
        peso: Float,
        tipo: String,
        ubicacion: String,
        valor: Float,
        vueloId: ID,
        pasajeroId: ID
    ): Equipaje
}
